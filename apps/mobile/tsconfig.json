{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "jsx": "react-native",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": false,
    "noUncheckedIndexedAccess": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/components/*": ["src/components/*"],
      "@/screens/*": ["src/screens/*"],
      "@/features/*": ["src/features/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/utils/*": ["src/utils/*"],
      "@/services/*": ["src/services/*"],
      "@/stores/*": ["src/stores/*"],
      "@/constants/*": ["src/constants/*"],
      "@/types/*": ["src/types/*"],
      "@/config/*": ["src/config/*"],
      "@/theme/*": ["src/theme/*"],
      "@/navigation/*": ["src/navigation/*"]
    }
  },
  "include": ["src/**/*", "src/types/*.d.ts", "index.ts", "App.tsx"],
  "exclude": [
    "node_modules",
    "android",
    "ios",
    ".expo",
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.stories.tsx",
    "src/examples/**",
    "src/components/AccessibleVideoPlayer.tsx",
    "src/components/AnalyticsDashboard.tsx",
    "src/services/userService.ts",
    "src/services/event-tracking.ts",
    "src/services/viral-loop-engine.ts",
    "src/services/performance-monitor.ts",
    "src/features/payments/screens/GiftInboxScreen.tsx",
    "src/features/payments/screens/TransactionDetailScreen.tsx",
    "src/features/payments/screens/PaymentMethodsScreen.tsx",
    "src/features/settings/screens/SafetyScreen.tsx",
    "src/features/profile/screens/DeletedMomentsScreen.tsx",
    "src/features/profile/screens/EditProfileScreen.tsx",
    "src/features/profile/screens/MyMomentsScreen.tsx",
    "src/features/profile/screens/SavedMomentsScreen.tsx",
    "src/features/profile/screens/ShareMomentScreen.tsx",
    "src/features/trips/screens/DiscoverScreen.tsx",
    "src/features/trips/screens/DisputeFlowScreen.tsx",
    "src/features/trips/screens/MatchConfirmationScreen.tsx"
  ]
}
