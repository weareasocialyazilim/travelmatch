{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true
  },
  "include": [
    "src/**/*",
    "src/types/*.d.ts",
    "index.js",
    "App.tsx",
    "app.config.ts",
    "metro.config.js",
    "babel.config.js",
    "**/__tests__/**/*",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ],
  "exclude": ["node_modules", "android", "ios", ".expo"]
}
