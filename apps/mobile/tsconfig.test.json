{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "@testing-library/jest-native"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/components/*": ["src/components/*"],
      "@/screens/*": ["src/screens/*"],
      "@/features/*": ["src/features/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/utils/*": ["src/utils/*"],
      "@/services/*": ["src/services/*"],
      "@/stores/*": ["src/stores/*"],
      "@/constants/*": ["src/constants/*"],
      "@/types/*": ["src/types/*"],
      "@/config/*": ["src/config/*"],
      "@/theme/*": ["src/theme/*"],
      "@/navigation/*": ["src/navigation/*"],
      "@/context/*": ["src/context/*"],
      "@lovendo/design-system": ["../../packages/design-system/src/index.ts"],
      "@lovendo/design-system/*": ["../../packages/design-system/src/*"],
      "@lovendo/design-system": ["../../packages/design-system/src/index.ts"],
      "@lovendo/design-system/*": ["../../packages/design-system/src/*"],
      "@lovendo/shared": ["../../packages/shared/src/index.ts"],
      "@lovendo/shared/*": ["../../packages/shared/src/*"],
      "@lovendo/shared": ["../../packages/shared/src/index.ts"],
      "@lovendo/shared/*": ["../../packages/shared/src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/types/*.d.ts"],
  "exclude": ["node_modules", "android", "ios", ".expo"]
}
