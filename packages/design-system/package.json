{
  "name": "@travelmatch/design-system",
  "version": "1.0.0",
  "description": "TravelMatch Design System - Personalization-first component library",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "lint": "NODE_OPTIONS='--max-old-space-size=4096' eslint src --ext .ts,.tsx",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --maxWorkers=2",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test-storybook": "test-storybook",
    "test-storybook:ci": "concurrently -k -s first -n \"SB,TEST\" -c \"magenta,blue\" \"pnpm build-storybook --quiet && npx http-server storybook-static --port 6006 --silent\" \"wait-on tcp:6006 && pnpm test-storybook\"",
    "chromatic": "chromatic --project-token=$CHROMATIC_TOKEN",
    "chromatic:ci": "chromatic --exit-zero-on-changes=false --exit-once-uploaded",
    "validate": "pnpm run lint && pnpm run type-check && pnpm run test:ci && pnpm run test-storybook:ci"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^2.1.0",
    "react": "^18.2.0",
    "react-native": "0.76.5",
    "react-native-gesture-handler": "^2.20.0",
    "react-native-reanimated": "^3.16.0",
    "react-native-svg": "^15.8.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^7.6.10",
    "@storybook/addon-essentials": "^7.6.10",
    "@storybook/addon-interactions": "^7.6.10",
    "@storybook/addon-links": "^7.6.10",
    "@storybook/jest": "^0.2.3",
    "@storybook/react": "^7.6.10",
    "@storybook/test-runner": "^0.16.0",
    "@storybook/testing-library": "^0.2.2",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.9.0",
    "@types/react": "^18.2.0",
    "axe-playwright": "^2.0.0",
    "chromatic": "^10.2.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "playwright": "^1.40.0",
    "react-test-renderer": "18.2.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-native": ">=0.74.0"
  },
  "publishConfig": {
    "access": "restricted"
  }
}
