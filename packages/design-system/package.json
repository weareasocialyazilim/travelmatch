{
  "name": "@travelmatch/design-system",
  "version": "1.0.0",
  "description": "TravelMatch Design System - Personalization-first component library",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "lint": "NODE_OPTIONS='--max-old-space-size=4096' eslint src --ext .ts,.tsx",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --maxWorkers=2",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test-storybook": "test-storybook",
    "test-storybook:ci": "concurrently -k -s first -n \"SB,TEST\" -c \"magenta,blue\" \"pnpm build-storybook --quiet && npx http-server storybook-static --port 6006 --silent\" \"wait-on tcp:6006 && pnpm test-storybook\"",
    "chromatic": "chromatic --project-token=$CHROMATIC_TOKEN",
    "chromatic:ci": "chromatic --exit-zero-on-changes=false --exit-once-uploaded",
    "validate": "pnpm run lint && pnpm run type-check && pnpm run test:ci && pnpm run test-storybook:ci"
  },
  "dependencies": {
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@storybook/addon-a11y": "^8.6.15",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^8.6.15",
    "@storybook/react": "^8.6.15",
    "@storybook/test": "^8.6.15",
    "@storybook/test-runner": "^0.21.3",
    "@testing-library/react-native": "^13.3.3",
    "@types/react": "^19.1.10",
    "axe-playwright": "^2.0.0",
    "chromatic": "^10.2.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.39.2",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "playwright": "^1.40.0",
    "react": "19.1.0",
    "react-native": "0.81.5",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-reanimated": "~4.1.1",
    "react-native-svg": "15.12.1",
    "react-test-renderer": "19.1.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0 || >=19.0.0",
    "react-native": ">=0.74.0"
  },
  "publishConfig": {
    "access": "restricted"
  }
}
