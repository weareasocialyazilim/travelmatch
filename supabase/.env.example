# =============================================================================
# SUPABASE EDGE FUNCTIONS - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control
# =============================================================================

# -----------------------------------------------------------------------------
# SUPABASE CONFIGURATION (Required)
# -----------------------------------------------------------------------------
SUPABASE_URL=https://bjikxgtbptrvawkguypv.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# -----------------------------------------------------------------------------
# PAYTR CONFIGURATION (Required for Payments)
# Get from: https://www.paytr.com/panel/integration
# -----------------------------------------------------------------------------
PAYTR_MERCHANT_ID=your-merchant-id
PAYTR_MERCHANT_KEY=your-merchant-key
PAYTR_MERCHANT_SALT=your-merchant-salt
PAYTR_TEST_MODE=true

# -----------------------------------------------------------------------------
# CLOUDFLARE IMAGES (Required for Image Processing)
# -----------------------------------------------------------------------------
CLOUDFLARE_ACCOUNT_ID=your-account-id
CLOUDFLARE_IMAGES_API_TOKEN=your-api-token
CLOUDFLARE_IMAGES_ACCOUNT_HASH=your-account-hash

# -----------------------------------------------------------------------------
# GOOGLE MAPS (Required for Geocoding)
# -----------------------------------------------------------------------------
GOOGLE_MAPS_API_KEY=your-google-maps-key

# -----------------------------------------------------------------------------
# REDIS / UPSTASH (Optional - for Rate Limiting)
# -----------------------------------------------------------------------------
UPSTASH_REDIS_REST_URL=https://your-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-token

# -----------------------------------------------------------------------------
# SENTRY (Optional - for Error Tracking)
# -----------------------------------------------------------------------------
SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# -----------------------------------------------------------------------------
# TWILIO (Required for SMS/Phone Auth)
# Get from: https://console.twilio.com
# -----------------------------------------------------------------------------
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_VERIFY_SERVICE_SID=VAxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# Create Verify Service: Console > Verify > Services > Create

# -----------------------------------------------------------------------------
# SENDGRID (Required for Transactional Emails)
# Get from: https://app.sendgrid.com/settings/api_keys
# -----------------------------------------------------------------------------
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SENDGRID_FROM_EMAIL=noreply@travelmatch.app
SENDGRID_FROM_NAME=TravelMatch
# Optional: Dynamic Template IDs
SENDGRID_TEMPLATE_WELCOME=d-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SENDGRID_TEMPLATE_VERIFICATION=d-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SENDGRID_TEMPLATE_PASSWORD_RESET=d-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# -----------------------------------------------------------------------------
# ENVIRONMENT
# -----------------------------------------------------------------------------
DENO_ENV=development
# Options: development, staging, production
